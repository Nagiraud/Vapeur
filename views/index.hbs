<div class="content">
    <h1>Bienvenue sur notre site</h1>
    <div class="list"> 
        <a href="games">Voir les jeux</a>
        <a href="games/new">Ajouter un jeux</a>

        <a href="editors">Voir les editeurs</a>
        <a href="editors/new">Ajouter un éditeur</a>

        <a href="genres">Voir les genres</a>
    </div>

    <h1>Jeux mis en avant</h1>
    <ul>
        {{#each gamesHighlight}}
            <li class="item">
                <a href="/games/{{this.id}}" class="link">{{this.title}}</a> 
                <form action="/games/{{this.id}}/unhighlight" method="POST">
                    <button class="highlight">★</button>
                </form>
            </li>
        {{/each}}
    </ul>
</div>