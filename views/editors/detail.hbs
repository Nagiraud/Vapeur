<div class="content">
    <h1>Tous les jeux de {{editor.name}}</h1>

    <div class="actions">
        <form action="/editors/{{id}}/delete" id="delete" method="POST" class="inline-form">
            <button type="submit" class="btn delete-btn">Supprimer</button>
        </form>
        <form action="/editors/{{editor.id}}/edit" method="GET" class="inline-form">
            <button type="submit" class="btn edit-btn">Modifier</button>
        </form>
    </div>

    <ul class="list">
        {{#each editor.Game}}
            <li class="item">
                <p><a href="/games/{{id}}" class="link">{{title}}</a></p>
            </li>
        {{else}}
            <li class="no-games">Aucun jeu trouvé pour cet éditeur.</li>
        {{/each}}
    </ul>

</div>