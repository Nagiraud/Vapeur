<h1>Toute les jeux de : {{editor.name}}</h1>
<form action="/editors/{{id}}/delete" id="delete" method="POST">
                <button type="submit">delete</button>
</form>
<form action="/editors/{{editor.id}}/edit" method="GET" style="display:inline;">
    <button type="submit">Modifier</button>
</form>

<ul>
    {{#each editor.Game}}
        <li>
           <p><a href="/games/{{id}}">{{title}}</a> </p> 
        </li>
    {{else}}
        <li>Aucun jeu trouvé pour cette éditeur.</li>
    {{/each}}
</ul>
<a href="/">Revenir au menu principal</a>