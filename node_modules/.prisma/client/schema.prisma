generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Games {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  ReleaseDate DateTime @default(now())
  id_Genre    Int      @default(0)
  id_Editor   Int      @default(0)
}

model Genres {
  id   Int    @id @default(autoincrement())
  name String
}

model Editors {
  id        Int     @id @default(autoincrement())
  name      String
  IsDeleted Boolean @default(false)
}
